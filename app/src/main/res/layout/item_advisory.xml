<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="8dp">
    <ImageView
        android:id="@+id/ivAdvisorDAO"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/asoeriaulima"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_items_tv"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_textview_items"
            android:textStyle="italic"
            tools:text="Tema: Firebase"/>
        <TextView
            android:id="@+id/tvAdvisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_items_tv"
            android:layout_gravity="center"
            android:textSize="@dimen/size_textview_items"
            android:textStyle="italic"
            tools:text="Asesor: HERNÃN ALEJANDRO QUINTANA CRUZ"/>


    </LinearLayout>

</LinearLayout>
